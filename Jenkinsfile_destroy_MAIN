pipeline {
  agent any
  
  stages {
    stage('Parallel Builds') {
      parallel {
        stage('Destroy Module: Slave') {
          steps {
            build job: 'terraform_slave_destroy_job'
          }
        }
        
        stage('Destroy Module: Prod 1') {
          steps {
            build job: 'terraform_prod1_destroy_job'
          }
        }
        
        stage('Destroy Module: Prod 2') {
          steps {
            build job: 'terraform_prod2_destroy_job'
          }
        } 

        stage('Destroy Module: s3') {
          steps {
            build job: 'terraform_s3_destroy_job'
          }
        }     

        stage('Destroy Module: DynamoDB') {
          steps {
            build job: 'terraform_dyndb_destroy_job'
          }
        }  

        stage('Destroy Module: Load Balancer (Prod 1+2)') {
          steps {
            build job: 'terraform_lb_destroy_job'
          }
        } 
       
      }
    }
  }
}
