pipeline {
    agent any
    
    stages {
    
        stage ('Terraform Init') {
            steps {
                dir('terraform_project/modules/load_balancer/') {
                    sh 'terraform init'
                }
            }
        }
     
        stage ('Terraform Apply') {
            steps {
                dir('terraform_project/modules/load_balancer/') {
                    sh 'terraform apply --auto-approve'
                }
            }
        }
    }
}