pipeline {
  agent any
  
  stages {
    stage('Parallel Builds') {
      parallel {
        stage('Construct Module: Slave') {
          steps {
            build job: 'terraform_slave_job'
          }
        }
        
        stage('Construct Module: Prod 1') {
          steps {
            build job: 'terraform_prod1_job'
          }
        }
        
        stage('Construct Module: Prod 2') {
          steps {
            build job: 'terraform_prod2_job'
          }
        }        
      }
    }
  }
}
