pipeline {
  agent any
  
  stages {
    stage('Parallel Builds') {
      parallel {
        stage('Construct Module: Slave') {
          steps {
            build job: 'Jenkinsfile_slave'
          }
        }
        
        stage('Construct Module: Prod 1') {
          steps {
            build job: 'Jenkinsfile_prod1'
          }
        }
        
        stage('Construct Module: Prod 2') {
          steps {
            build job: 'Jenkinsfile_prod2'
          }
        }        
      }
    }
  }
}
